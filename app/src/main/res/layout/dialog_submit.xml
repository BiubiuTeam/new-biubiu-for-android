<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"

    android:layout_width="match_parent"
    android:background="@drawable/shape_blue_corner_fill"
    android:layout_height="wrap_content">
    <TextView
        android:paddingLeft="80dip"
        android:paddingRight="80dip"
        android:textSize="16sp"
        android:layout_gravity="center_horizontal"
        android:paddingTop="40dip"
        android:paddingBottom="40dip"
        android:drawablePadding="5dip"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/ic_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/submitted"/>

    <Button
        android:id="@+id/btnOK"
        android:padding="@dimen/dfPadding"
        android:textSize="16sp"
        android:text="@string/confirm"
        android:background="@drawable/shape_white_bottom_conner_fill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>