<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:showIn="@layout/view_answer_item">

    <CheckBox
        android:padding="@dimen/dfPadding"
        android:gravity="center_vertical"
        android:background="@null"
        android:id="@+id/likeCheck"
        android:layout_width="wrap_content"
        android:textSize="12sp"
        android:text="@string/zero"
        android:button="@null"
        android:drawablePadding="5dip"
        android:drawableLeft="@drawable/sel_like_btn"
        android:layout_height="wrap_content" />

    <CheckBox
        android:padding="@dimen/dfPadding"
        android:gravity="center_vertical"
        android:background="@null"
        android:button="@null"
        android:drawablePadding="5dip"
        android:drawableLeft="@drawable/sel_unlike_btn"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="10dp"
        android:id="@+id/unlikeCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zero"
        android:textSize="12sp" />
</merge>